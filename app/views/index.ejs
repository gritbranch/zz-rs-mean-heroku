  <script type="text/javascript" src="js/user/controllers/user.client.controller.js"></script>
  <script type="text/javascript" src="js/user/config/user.client.routes.js"></script>
  <script type="text/javascript" src="js/user/services/user.client.service.js"></script>
  <script type="text/javascript" src="js/user/services/authentication.client.service.js"></script>
